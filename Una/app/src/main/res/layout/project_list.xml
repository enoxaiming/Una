<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop = "10dp"
    card_view:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topRelative">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:id="@+id/usrPhoto" />

            <pabix.chickens.una.Widget.NotoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usrname"
                android:layout_toEndOf="@+id/usrPhoto"
                android:layout_alignTop="@+id/usrPhoto"
                android:layout_marginStart="9dp"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="HaJunHyeok" />

            <pabix.chickens.una.Widget.NotoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proname"
                android:layout_toEndOf="@+id/usrPhoto"
                android:layout_below="@+id/usrname"
                android:layout_marginStart="9dp"
                android:layout_marginTop="3dp"
                android:text="English"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <pabix.chickens.una.Widget.NotoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/participant"
                android:layout_toStartOf="@+id/works"
                android:layout_below="@+id/usrname"
                android:layout_marginTop="3dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:textColor="#6AA1C9"
                android:text="6"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:textStyle="normal|bold"/>

            <ImageView
                android:layout_width="54dp"
                android:layout_height="18dp"
                android:id="@+id/works"
                android:layout_below="@+id/usrname"
                android:layout_marginTop="3dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/mozip"
                android:foregroundGravity="left"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#C0C0C0"
            android:layout_marginTop="6dp"/>

        <RelativeLayout
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/midRelative">

            <pabix.chickens.una.Widget.NotoTextView
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                android:ellipsize="end"
                android:lines="2"
                android:id="@+id/contents"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hashlinear"
                android:orientation="horizontal"
                android:layout_below="@id/contents">

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#C0C0C0"
            android:layout_marginTop="6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/bottomRelative">

            <pabix.chickens.una.Widget.NotoTextButton
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:drawableLeft="@drawable/check"
                android:text="@string/submit"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:background="@drawable/btn_bg" />

            <pabix.chickens.una.Widget.NotoTextButton
                android:drawableLeft="@drawable/yellowcheck"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                android:text="@string/contact"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:layout_toLeftOf="@+id/submit"
                android:background="@drawable/btn_bg"
                android:layout_marginRight="4dp"/>

            <pabix.chickens.una.Widget.NotoTextButton
                android:drawableLeft="@drawable/emptyheart"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/store"
                android:text="@string/store"
                android:textSize="14sp"
                android:background="@drawable/btn_bg"
                android:lineSpacingExtra="8sp"
                android:layout_toLeftOf="@+id/contact"
                android:layout_marginRight="4dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>