<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topRelative">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/usrPhoto"
                android:background="@drawable/ellipse"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usrname"
                android:layout_toEndOf="@+id/usrPhoto"
                android:layout_alignTop="@+id/usrPhoto"
                android:layout_marginStart="9dp"
                android:text="HaJunHyeok" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proname"
                android:layout_toEndOf="@+id/usrPhoto"
                android:layout_below="@+id/usrname"
                android:layout_marginStart="9dp"
                android:layout_marginTop="6dp"
                android:text="English"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/participant"
                android:layout_toStartOf="@+id/works"
                android:layout_below="@+id/usrname"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:text="6"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/works"
                android:layout_below="@+id/usrname"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/Mozip"
                android:foregroundGravity="left"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#C0C0C0"
            android:layout_marginTop="6dp"/>

        <RelativeLayout
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/midRelative">

            <TextView
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ellipsize="end"
                android:lines="2" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#C0C0C0"
            android:layout_marginTop="6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/bottomRelative">

        </RelativeLayout>

        <TextView
            android:id="@+id/tvitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="test" />
    </LinearLayout>

</android.support.v7.widget.CardView>